<h1>Welcome, please enter the information you would like to update.</h1>



<h3>

<%= form_tag("/products/#{@product.id}", method: "patch") do %>

  <%= label_tag(:name, "Enter product name:")%>
  <%= text_field_tag(:name, @product.name) %>

  <%= label_tag(:price, "Enter product price:") %>
  <%= text_field_tag(:price, @product.price) %>

  <%= label_tag(:image, "Enter product image:") %>
  <%= text_field_tag(:image, @product.image) %>

  <%= label_tag(:description, "Enter product description:") %>
  <%= text_field_tag(:description, @product.description) %>


  <%= submit_tag("Update My Product!") %>
<% end %>
</h3>


<h1><%=@message%></h1>
